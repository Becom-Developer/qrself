<!-- Page content starts -->
<div class="content features-two">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <a class="btn btn-success btn-lg btn-block" href="/card">カード一覧</a>
      </div>
      <div class="col-md-12">
        <h3 class="title text-center">新規登録はここから</h3>
        <div class="formy well">
