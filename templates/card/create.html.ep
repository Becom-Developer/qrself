          <h4 class="title">新規紹介カード登録</h4>
          <p>&nbsp;</p>
          <div class="form">
            <!-- Register form (not working)-->
            <form name="form_store" action="/card" method="post" class="form-horizontal" role="form">
              <div class="form-group">
                <label for="inputName" class="col-lg-2 control-label">カードの名前</label>
                <div class="col-lg-8">
                  <input name="name" type="text" class="form-control" id="inputName" placeholder="例: 仕事用のカード">
                </div>
              </div>
              <button  class="btn btn-danger btn-lg btn-block" type="submit" class="btn btn-default">登録実行</button>
